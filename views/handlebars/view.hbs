   <div class="col-12">
       <h1 class="text-center">Products view</h1>
   </div>

   <div class="container mt-3">
       <div class="jumbotron">
           <h1>Products view</h1>
           <br>

           <div class="table-responsive">
               <table class="table table-dark">
                   <tr>
                       <th>Name</th>
                       <th>Price</th>
                       <th>Thumbnails</th>
                   </tr>
                    {{#each products}}
                   <tr>
                       <td>
                           {{this.title}}
                       </td>
                       <td>
                           {{this.price}}
                       </td>
                       <td><img width="50" src={{this.thumbnails}} alt="not found"></td>
                   </tr>
                    {{/each}}
               </table>
           </div>

       </div>
   </div>

   <div class="col-12">
       <div class="mt-3">
           <form class="form-inline"  onsubmit="/api/products-test" autocomplete="off">
               <input class="btn btn-primary my-2" type="submit" value="Create Product!">
           </form>
       </div>
   </div>

<div class="col-12">
     <table id="products" class="table mt-3">
        </table>
</div>

       
<div class="col-12">
    <div class="mt-3">
    <form class="form-inline" onsubmit="return addMessage()" autocomplete="off">
      <input type="text" id="email" class="form-control my-2 mr-2" placeholder="Email">
      <input type="text" id="message" class="form-control my-2 mr-2" placeholder="Text a message">
      <input class="btn btn-primary my-2" type="submit" value="Send!">
    </form>
  </div>
</div>
  
  <div class="col-12">
        <div id="messages" class="mt-3"></div>
  </div>
    

     <script src="js/main.js"></script>